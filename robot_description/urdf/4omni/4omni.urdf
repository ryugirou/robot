<?xml version="1.0" encoding="UTF-8"?>
<robot name="4omni" xmlns:xacro="http://www.ros.org/wiki/xacro">
  <xacro:property name="robot_name" value="4omni" />
	<xacro:include filename="$(find robot_description)/urdf/odm_omni_wheel_set1.xacro"/>	
  <xacro:include filename="$(find robot_description)/urdf/laser_macro.xacro" />
  <xacro:include filename="$(find robot_description)/urdf/imu_macro.xacro" />
 	<link name="base_link"/>

 	<joint name="body_joint" type="fixed">
 	  <parent link="base_link"/>
 	  <child  link="body_link"/>
 	  <origin xyz="0 0 0.05" rpy="0 0 0"/>
 	</joint>

 	<link name="body_link">
 	  <visual>
 	    <geometry>
 	      <box size="0.6 0.6 0.036" />
 	    </geometry>
 	    <material name="gray"/>
 	  </visual>
 	  <collision>
 	    <geometry>
 	      <box size="0.6 0.6 0.036" />
 	    </geometry>
 	  </collision>
 	  <inertial>
 	    <mass value="2.0"/>
 	    <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
 	  </inertial>  
 	</link>

 	<joint name="laser_joint" type="fixed">
 	  <parent link="body_link"/>
 	  <child  link="laser_link"/>
 	  <origin xyz="0 0.3 0" rpy="0 0 0"/>
 	</joint>

 	<link name="laser_link">
 	  <visual>
 	    <geometry>
 	      <box size="0.0795 0.0795 0.090" />
 	    </geometry>
 	    <material name="gray"/>
 	  </visual>
 	  <collision>
 	    <geometry>
 	      <box size="0.0795 0.0795 0.090" />
 	    </geometry>
 	  </collision>
 	  <inertial>
 	    <mass value="2.0"/>
 	    <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
 	  </inertial>  
 	</link>


</robot>
